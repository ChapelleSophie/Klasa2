}
float pt(float a, float b, float s)
{
	float pom;
	s = ((a+b)/2);
	cout << "f(a)" << "\t" << "f(b)" << "\t" << "S" << "\t" << "f(s)" << "\t" "a" << "\t" "b" <<endl <<endl;
	
	for(int i=0; i < 50; i++)
	{
		cout << f(a) << "\t" << f(b) << "\t" << s << "\t" << f(s) << "\t" << a << "\t" << b <<endl;
		if((f(a))*(f(s)) < 0)
		{
			pom = ((b-a)/2);
			b = b - pom;
		}
		else if((f(a))*(f(s)) > 0)
		{
			pom = ((b-a)/2);
			a = a + pom;

		}
		s = ((a+b)/2);
		if(f(s) == 0)
		{
			pom = i+1;
			break;
		}
	}
	cout << f(a) << "\t" << f(b) << "\t" << s << "\t" << f(s) << "\t" << a << "\t" << b <<endl;
	cout << "Miejsce zerowe zostalo znalezione po " << pom << " krokach"<<endl;

}

