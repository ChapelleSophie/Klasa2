int main()
{
	cout << "BISEKCJA" <<endl <<endl;

	int a; /// <--- jesli okreslasz wartosci tutaj, usun cin'a
	int b; /// <--- jesli okreslasz wartosci tutaj, usun cin'a
	int s; // NIE ZMIENIAJ
	
	cout << "Podaj przedzial ";
	cin >> a >> b; /// <--- lub podaj w incie

