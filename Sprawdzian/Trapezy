double oblicz(int a,int b,int dl,int n)
{
    double sumaPol = 0;

    for(int i=1; i<=3; i++)
    {
        sumaPol = sumaPol + ((( (f(a+((i-1)*dl))) + (f(a+(i*dl))) )/2)*dl); //wzor na trapezy
    }
    cout << "Suma pola trapezow " << sumaPol <<endl;
}

