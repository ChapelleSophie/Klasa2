double oblicz(int a,int b,int dl,int n)
{
    double sumaPol = 0;

    for(int i=1; i<=n; i++)
    {
        sumaPol = sumaPol + (f(a + (i*dl))); //wzor na trapezy
    }
    cout << "Suma pola prosotkatow z nadmiarem " << sumaPol <<endl;
}

